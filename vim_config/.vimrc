set encoding=utf8
set fileencodings=utf8

set number
set ai
set cursorline
set tabstop=4
set shiftwidth=4
set cindent

set mouse=a
set ruler
set hlsearch
set incsearch

set laststatus=2

syntax enable

filetype indent on

set bg=dark
hi LineNr cterm=bold ctermfg=White ctermbg=NONE
hi CursorLineNr cterm=bold ctermfg=Red ctermbg=NONE